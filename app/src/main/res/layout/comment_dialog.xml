<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="22dp">

    <TextView
        android:id="@+id/commentdialog_tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:fontFamily="@font/pretendard_semibold"
        android:includeFontPadding="false"
        android:text="답변 등록"
        android:textColor="@color/colorPrimary"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/commentdialog_et_comment"
        android:layout_width="274dp"
        android:layout_height="161dp"
        android:layout_marginTop="22dp"
        android:layout_marginBottom="22dp"
        android:background="@drawable/d_post_et_comment"
        android:fontFamily="@font/pretendard_regular"
        android:gravity="start|top"
        android:hint="답변을 입력하세요."
        android:includeFontPadding="false"
        android:paddingHorizontal="11dp"
        android:paddingVertical="11dp"
        android:textColor="@color/colorBlack"
        android:textColorHint="@color/colorGray"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/commentdialog_tv_title"
        app:layout_constraintVertical_bias="0" />

    <TextView
        android:id="@+id/commentdialog_btn_ok"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/pretendard_semibold"
        android:includeFontPadding="false"
        android:paddingStart="13dp"
        android:paddingTop="13dp"
        android:paddingEnd="11dp"
        android:paddingBottom="11dp"
        android:text="등록"
        android:textColor="@drawable/tv_d_buttontext_primary"
        android:textSize="13sp"
        app:layout_constraintEnd_toStartOf="@id/commentdialog_btn_cancle"
        app:layout_constraintTop_toTopOf="@id/commentdialog_btn_cancle" />

    <TextView
        android:id="@+id/commentdialog_btn_cancle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="22dp"
        android:layout_marginEnd="11dp"
        android:fontFamily="@font/pretendard_semibold"
        android:includeFontPadding="false"
        android:paddingStart="13dp"
        android:paddingTop="13dp"
        android:paddingEnd="11dp"
        android:paddingBottom="11dp"
        android:text="취소"
        android:textColor="@drawable/tv_d_buttontext_black"
        android:textSize="13sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/commentdialog_et_comment" />
</androidx.constraintlayout.widget.ConstraintLayout>