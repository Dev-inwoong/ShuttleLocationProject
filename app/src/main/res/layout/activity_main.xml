<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MapsActivity" />

    <ImageView
        android:id="@+id/main_Spinner"
        android:layout_width="354dp"
        android:layout_height="60dp"
        android:layout_marginTop="37dp"
        android:background="@drawable/main_iv_sb_background"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/main_icon_sb_Menu"
        android:layout_width="18dp"
        android:layout_height="12dp"
        android:layout_marginStart="29dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/main_icon_sb_menu"
        app:layout_constraintLeft_toLeftOf="@+id/main_Spinner"
        app:layout_constraintTop_toTopOf="@id/main_Spinner" />

    <TextView
        android:id="@+id/main_text_Route"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="17dp"
        android:fontFamily="@font/pretendard_medium"
        android:includeFontPadding="false"
        android:text="한국공학대학교"
        android:textColor="@color/colorBlack"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@id/main_icon_sb_Menu"
        app:layout_constraintTop_toTopOf="@id/main_Spinner" />

    <Button
        android:id="@+id/main_icon_sb_Dropdown"
        android:layout_width="12dp"
        android:layout_height="8dp"
        android:layout_marginTop="22dp"
        android:layout_marginEnd="29dp"
        android:background="@drawable/main_icon_sb_dropdown"
        android:backgroundTint="@color/colorGray"
        app:layout_constraintEnd_toEndOf="@id/main_Spinner"
        app:layout_constraintTop_toTopOf="@id/main_Spinner" />

    <Button
        android:id="@+id/main_btn_toCommunity"
        android:layout_width="62dp"
        android:layout_height="62dp"
        android:layout_marginEnd="3dp"
        android:layout_marginBottom="73dp"
        android:background="@drawable/main_btn_to_community"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        android:id="@+id/main_btn_toPrefernces"
        android:layout_width="62dp"
        android:layout_height="62dp"
        android:layout_marginEnd="3dp"
        android:layout_marginBottom="19dp"
        android:background="@drawable/main_btn_to_setting"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>