<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MapsActivity" />

<!--    <Button-->
<!--        android:id="@+id/main_btn_toPost"-->
<!--        android:layout_width="wrap_content"-->
<!--        android:layout_height="wrap_content"-->
<!--        app:layout_constraintEnd_toEndOf="parent"-->
<!--        app:layout_constraintBottom_toBottomOf="parent"/>-->
    <ImageView
        android:id="@+id/main_Spinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="37dp"
        android:background="@drawable/main_iv_sb_background"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/main_icon_sb_Menu"
        android:layout_width="18dp"
        android:layout_height="12dp"
        android:layout_marginTop="57dp"
        android:layout_marginLeft="30dp"
        android:background="@drawable/main_icon_sb_menu"
        app:layout_constraintLeft_toLeftOf="@+id/main_Spinner"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/main_text_Route"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="51dp"
        android:layout_marginLeft="90dp"
        android:text="hello"
        android:textSize="19dp"
        android:textColor="#000000"
        android:fontFamily="@font/pretendard_medium"
        android:includeFontPadding="false"
        app:layout_constraintLeft_toLeftOf="@+id/main_Spinner"
        app:layout_constraintTop_toTopOf="parent"/>

    <Button
        android:id="@+id/main_icon_sb_Dropdown"
        android:layout_width="12dp"
        android:layout_height="9dp"
        android:layout_marginTop="59dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/main_icon_sb_dropdown"
        app:layout_constraintRight_toRightOf="@+id/main_Spinner"
        app:layout_constraintTop_toTopOf="parent"/>

    <Button
        android:id="@+id/main_btn_toCommunity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="73dp"
        android:drawableBottom="@drawable/main_btn_to_community"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:background="@android:color/transparent"/>

    <Button
        android:id="@+id/main_btn_toPrefernces"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="19dp"
        android:drawableBottom="@drawable/main_btn_to_setting"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:background="@android:color/transparent"/>


</androidx.constraintlayout.widget.ConstraintLayout>